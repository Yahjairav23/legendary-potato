<%=render partial: "shared/error_messages", locals: {new_object: @user} %>

<%=bootstrap_form_for @user do |t|%> 
    <%=t.text_field :name%><br>
    <%=t.text_field :age%><br>
    <%=t.text_area :bio%><br>
    <%=t.text_field :username%><br>
    <%=t.password_field :password%>

    <%=t.submit "Submit", class: "btn btn-primary" %>  
<%end%>
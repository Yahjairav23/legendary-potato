<h1><%=@user.name%></h1>
<div>Age: <%=@user.age%></div>
<div>Bio:</div>
<div><%=@user.bio%></div>


<%if @user.teams != nil && @user == current_user%>
<br><h4><%= link_to "Team(s):", teams_path%> </h4>
    <ul><h5><%@user_teams.each do |team| %>
        <li><%= link_to team.name, team_path(team)%></li>
    <%end%></h5></ul>

<%elsif @user.teams != nil%>
<br><h4>Team(s):</h4>
    <ul><h5><%@user_teams.each do |team| %>
        <li><%= team.name%></li>
    <%end%></h5></ul>

<%end%>


<%if current_user == @user%>
    <br>
    <%= link_to "View Current Tasks", tasks_path%><br>
    <%=link_to "Edit User", edit_user_path(@user)%>
    <%=link_to "Delete User", user_path(@user), :method => :delete, data: {confirm: "Are you sure you want to delete your profile? We'd hate to see you go!"}%>
<%end%>
<%=render partial: "shared/error_messages", locals: {new_object: @comment}%>

<%= form_for @comment do |f| %>
    <%= f.label :comment %>
    <%= f.text_field :comment %>

    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :task_id, value: @task.id %>

    <p><%= f.submit %> </p>

<% end %>
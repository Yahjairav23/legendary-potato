
<div class="row">
<div class="col-md-1"></div>
<div class="col-md-2">
    <h1>Projects</h1>
    <p class="lead"> Are you ready to start your next project?</p>

    <p><%= link_to "New Project", new_project_path, class: "btn btn-primary" %> 
    </p>
</div>
<div class="col-md-6">

<h3> Current </h3>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Status</th>
        <th>Team</th>
      </tr>
    </thead>

    <tbody>
    <% @incomplete_projects.each do |p| %>
        <tr>
        <td><%=  link_to p.name, project_path(p.id) %></td>
        <td><%=  p.start_date %></td>
        <td><%=  p.end_date %></td>
        <td><%=  p.status %></td>
        <td><%=  link_to p.team.name, team_path(p.team.id) %></td>
        </tr>
    <% end %> 
  </tbody>
  </table>

  <h3> Completed</h3>


  <table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Status</th>
      <th>Team</th>
    </tr>
  </thead>

  <tbody>
  <% @completed_projects.each do |p| %>
      <tr>
      <td><%=  link_to p.name, project_path(p.id) %></td>
      <td><%=  p.start_date %></td>
      <td><%=  p.end_date %></td>
      <td><%=  p.status %></td>
      <td><%=  link_to p.team.name, team_path(p.team.id) %></td>
      </tr>
  <% end %> 
</tbody>
</table>



</div>
<div class="col-md-3"></div>